/* message/message/message.wxss */

@import "../../wxSearch/wxSearch.wxss";
.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 13rpx;
  border-radius: 50%;
}
.weui-search-bar {
  position: relative;
  padding: 6px 8px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}
.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}

.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: 2;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 80px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  height: 30px;
  line-height: 30px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}
.image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.t1{
  border-bottom: 1rpx solid #d7d6dc;
}