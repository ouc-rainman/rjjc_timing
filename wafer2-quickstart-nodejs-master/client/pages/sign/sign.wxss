/* pages/sign/sign.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 40rpx;
  border-radius: 50%;
  box-shadow: 1px 1px 1px 1px #eee;
}

.userinfo-nickname {
  color: black;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 150rpx 0;
  box-sizing: border-box;
} 
button{
  margin-top: 100rpx;
  background: #fff;
  border: 1px solid #444;
  border-radius: 999px;
  font-size: 36rpx;
}